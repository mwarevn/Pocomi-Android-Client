<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8sp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0sp"
        app:cardCornerRadius="1000sp">

        <ImageView
            android:src="@drawable/deleted_account"
            android:id="@+id/ivAvatarMember"
            android:layout_width="50sp"
            android:layout_height="50sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginHorizontal="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/commentItem"
            android:background="@drawable/textarea"
            android:backgroundTint="#333c4d66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            android:layout_marginTop="4sp"-->
<!--            android:layout_marginHorizontal="4sp"-->
<!--            android:paddingBottom="2sp"-->

            <LinearLayout
                android:id="@+id/layoutHighlightIsAdmin"
                android:paddingTop="2sp"
                android:layout_marginTop="2dp"
                android:paddingHorizontal="12sp"
                android:backgroundTint="#00FFFFFF"
                android:background="@drawable/textarea"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Nguyễn Ngọc Minh"
                    android:textColor="#050505"
                    android:textStyle="bold"
                    android:id="@+id/tvMemberName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/ivVerifyAdmin"
                    android:src="@drawable/verify"
                    android:layout_marginStart="4sp"
                    android:layout_width="24sp"
                    android:layout_height="25sp" />

            </LinearLayout>

            <TextView
                android:paddingBottom="8sp"
                android:paddingHorizontal="12sp"
                android:textColor="#050505"
                android:id="@+id/tvCommentContent"
                android:layout_marginTop="0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_marginStart="5sp"
            android:textSize="10sp"
            android:textStyle="italic"
            android:id="@+id/tvCommentAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>